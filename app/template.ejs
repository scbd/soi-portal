                    <li class="navbar-right">
                        <div user-notifications></div>
                    </li>

                    <!--signin-->
                    <li ng-cloak ng-show="user" class="navbar-right">

                        <a ng-hide="user.isAuthenticated" title="Sign In" class="fa fa-power-off" href="/signin" style="color: black"> sign in </a>

                        <a ng-show="user.isAuthenticated"  href="#" data-toggle="dropdown">
                            <i class="fa fa-chevron-down"></i> <span> {{user.name}}</span>
                        </a>

                        <ul class="dropdown-menu bg-darkgrey" role="menu" >
                            <li><a href="#" ng-click="actionProfile()"><i class="fa fa-user" style="font-size:15px"></i>&nbsp; Profile</a></li>
                            <li class="dropdown-submenu">
                                <a tabindex="-1" href="#"><i class="fa fa-lock" style="font-size:15px"></i>&nbsp; My Roles</a>
                                <ul class="dropdown-menu bg-darkgrey" role="menu" style="min-width:200px">
                                    <li ng-repeat="role in user.roles|orderBy:'toString()'"><a tabindex="-1" href="#">{{role}}</a></li>
                                </ul>
                            </li>
                            <li><a href="#" ng-click="actionPassword()"><i class="fa fa-user" style="font-size:15px"></i>&nbsp; Password</a></li>
                            <li><a href="#" ng-click="signOut()"><i class="fa fa-sign-out" style="font-size:15px"></i>&nbsp; Sign-out</a></li>
                        </ul>
                    </li> <!--  end sign in-->
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

